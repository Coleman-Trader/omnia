totem {
    version: 2
    secauth: off
    threads: 0
    transport: udpu
}

quorum {
  provider: corosync_votequorum
  two_node: 1
}

nodelist {
  node {
    ring0_addr: {{ hostvars['omnia_provision']['original_admin_nic_ip'] }}
    name: {{ hostvars['omnia_provision']['oim_node_name'] }}
    nodeid: 1
  }
{% if hostvars['omnia_provision']['enable_oim_ha'] %}
{%- for node_details in hostvars['omnia_provision']['passive_oim_nodes'].query_result %}
  node {
    ring0_addr: {{ node_details.admin_ip }}
    name: {{ node_details.node }}
    nodeid: {{ loop.index + 1 }}
  }
{%- endfor %}
{% endif %}

}

logging {
  to_logfile: yes
  logfile: /var/log/cluster/corosync.log
  to_syslog: yes
  timestamp: on
}
