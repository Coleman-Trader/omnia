#
# Example slurm.conf file. Please run configurator.html
# (in doc/html) to build a configuration file customized
# for your environment.
#
#
# slurm.conf file generated by configurator.html.
#
# See the slurm.conf man page for more information.
#
ClusterName={{ cluster_name }}
ControlMachine={{ machine_name.stdout }}
#ControlAddr=
#BackupController=
#BackupAddr=
#
SlurmUser={{ slurm_user }}
#SlurmdUser=root
{% if slurm_installation_type == nfs_share_slurm %}
#SlurmctldParameters
{% elif slurm_installation_type == configless_slurm %}
SlurmctldParameters=enable_configless
{% endif %}
SlurmctldPort={{ slurmctld_port }}
SlurmdPort={{ slurmd_port }}
SrunPortRange={{ srun_port_range }}
AuthType=auth/munge
#JobCredentialPrivateKey=
#JobCredentialPublicCertificate=
{% if slurm_installation_type == nfs_share_slurm %}
StateSaveLocation={{ spool_dir }}
{% elif slurm_installation_type == configless_slurm %}
#StateSaveLocation=/var/spool/
{% endif %}
SlurmdSpoolDir={{ spool_pth }}
SwitchType=switch/none
MpiDefault=none
SlurmctldPidFile={{ slurmctld_pid }}
SlurmdPidFile={{ slurmd_pid }}
{% if ansible_distribution | lower == "ubuntu" %}
ProctrackType=proctrack/cgroup
{% elif ansible_distribution | lower in ["redhat", "rocky"] %}
ProctrackType=proctrack/pgid
{% endif %}
{% if slurm_installation_type == nfs_share_slurm %}
{% if ansible_distribution | lower == "ubuntu" %}
PluginDir={{ plugin_slurm_dir_ubuntu }}
{% elif ansible_distribution | lower in ["redhat", "rocky"] %}
PluginDir={{ plugin_slurm_dir }}
{% endif %}
{% elif slurm_installation_type == configless_slurm %}
#PluginDir=
{% endif %}
#FirstJobId=
ReturnToService=2
#MaxJobCount=
#PlugStackConfig=
#PropagatePrioProcess=
#PropagateResourceLimits=
#PropagateResourceLimitsExcept=
#Prolog=
#Epilog=
#SrunProlog=
#SrunEpilog=
#TaskProlog=
#TaskEpilog=
TaskPlugin=task/cgroup
PrologFlags=contain
#TrackWCKey=no
#TreeWidth=50
#TmpFS=
#UsePAM=
#
# TIMERS
SlurmctldTimeout=300
SlurmdTimeout=300
InactiveLimit=0
MinJobAge=300
KillWait=30
Waittime=0
MessageTimeout=60
#
# SCHEDULING
SchedulerType=sched/backfill
#SchedulerAuth=
SelectType=select/linear
#FastSchedule=1
PriorityType=priority/multifactor
PriorityDecayHalfLife=14-0
#PriorityUsageResetPeriod=14-0
PriorityWeightFairshare=100000
PriorityWeightAge=1000
PriorityWeightPartition=10000
PriorityWeightJobSize=1000
PriorityMaxAge=14-0
#
# LOGGING
SlurmctldDebug=3
SlurmctldLogFile={{ slurmctld_log }}
SlurmdDebug=1
SlurmdLogFile={{ slurmd_log }}
JobCompType=jobcomp/none
#JobCompLoc=
#
# ACCOUNTING
JobAcctGatherType=jobacct_gather/linux
JobAcctGatherFrequency=30
#
AccountingStorageType=accounting_storage/slurmdbd
#AccountingStorageHost=
#AccountingStorageLoc=
#AccountingStoragePass=
#AccountingStorageUser=
AccountingStoragePort={{ acct_port }}
# COMPUTE NODES
PartitionName=normal Nodes=ALL Default=YES MaxTime=INFINITE State=UP
